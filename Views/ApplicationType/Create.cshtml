@model mvcProject.Models.ApplicationType


<form method="post" asp-action="Create">
    <div class="border p-3">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>   <!-- if ModelOnly = it will only display below the input form groups. if All ... it will also display on top -->
        <div class="form-group row">
            <h2 class="text-info pl-3">Add Application Type</h2>
        </div>

        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="Name"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-success w-100">
                                <!-- No need to specify asp-controller ... it assumes you mean the same controller -->
                                <i class="fas fa-sign-out-alt"></i> &nbsp; Back
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-4">
                <!-- This is to be kept empty -->
            </div>
        </div>
    </div>
</form>

@section Scripts {   <!-- Client side validation -->
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

